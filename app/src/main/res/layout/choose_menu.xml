<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseMenu"
    android:background="#ffffffff">



    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        layout="@layout/details_dinner" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="160dp"
        android:id="@+id/price_menu"
        layout="@layout/total_cost" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/banner" />


    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        layout="@layout/dish_display_type"
        android:id="@+id/starters" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        layout="@layout/dish_display_image"
        android:layout_below="@+id/starters"
        android:layout_marginLeft="10dp"
        android:id="@+id/startersImage" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        layout="@layout/dish_display_type"
        android:layout_below="@+id/startersImage"
        android:layout_marginLeft="10dp"
        android:id="@+id/mainCourses" />


    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        layout="@layout/dish_display_image"
        android:layout_below="@+id/mainCourses"
        android:layout_marginLeft="10dp"
        android:id="@+id/mainCourseImage" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        layout="@layout/dish_display_type"
        android:layout_below="@+id/mainCourseImage"
        android:layout_marginLeft="10dp"
        android:id="@+id/desserts"/>
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        layout="@layout/dish_display_image"
        android:layout_below="@+id/desserts"
        android:layout_marginLeft="10dp"
        android:id="@+id/dessertsImage" />



    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/start"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dessertsImage"
        android:layout_marginBottom="20dp"
        layout="@layout/button_start_create" />

</RelativeLayout>
</ScrollView>